  "main": "index.js",
  "scripts": {
    "clean": "rimraf dist",
    "build:tsc": "npx tsc",
    "build:copy:views": "npx cpy \"src/views/**/*\" dist/views --parents",
    "build:copy:public": "npx cpy \"src/public/**/*\" dist/public --parents",
    "build:copy": "npm run build:copy:views && npm run build:copy:public",
    "build": "npm run build:tsc && npm run build:copy",
    "start": "node dist/index.js",
    "dev": "npm run clean && npm run build && npm run start",
    "test": "jest"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "dotenv": "^16.4.1",
    "ejs": "^3.1.9",
    "express": "^4.18.2",
    "http-errors": "^2.0.0",
    "morgan": "^1.10.0",
    "reflect-metadata": "^0.2.1",
    "typedi": "^0.10.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.11",
    "@typescript-eslint/eslint-plugin": "^6.20.0",
    "@typescript-eslint/parser": "^6.20.0",
    "cpy-cli": "^5.0.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.3",
    "rimraf": "^5.0.5",
    "ts-jest": "^29.1.2",
